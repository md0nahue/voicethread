<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold">Topics</h1>
    <%= link_to 'New Topic', new_topic_path, class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <% @topics.each do |topic| %>
      <div class="bg-white rounded-lg shadow-md p-6">
        <h2 class="text-xl font-semibold mb-4"><%= topic.body %></h2>
        <div class="flex justify-between items-center">
          <div class="text-sm text-gray-600">
            <%= pluralize(topic.interview_sections.count, 'section') %>
          </div>
          <div class="space-x-2">
            <%= link_to 'View', topic, class: "text-blue-500 hover:text-blue-700" %>
            <%= link_to 'Edit', edit_topic_path(topic), class: "text-green-500 hover:text-green-700" %>
            <%= button_to 'Delete', topic, method: :delete, class: "text-red-500 hover:text-red-700", data: { confirm: 'Are you sure?' } %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div> 