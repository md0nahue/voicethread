<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold">Topic Details</h1>
    <div class="space-x-2">
      <%= link_to 'Edit', edit_topic_path(@topic), class: "bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded" %>
      <%= link_to 'Back to Topics', topics_path, class: "bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded" %>
    </div>
  </div>

  <div class="bg-white rounded-lg shadow-md p-6 mb-6">
    <h2 class="text-xl font-semibold mb-4">Topic</h2>
    <p class="text-gray-700"><%= @topic.body %></p>
  </div>

  <div class="bg-white rounded-lg shadow-md p-6">
    <h2 class="text-xl font-semibold mb-4">Interview Sections</h2>
    <div class="space-y-4">
      <% @topic.interview_sections.each do |section| %>
        <div class="border-b pb-4">
          <h3 class="text-lg font-medium mb-2"><%= section.body %></h3>
          <div class="space-y-2">
            <% section.questions.each do |question| %>
              <div class="flex items-center space-x-2">
                <div class="flex-grow">
                  <p class="text-gray-700"><%= question.body %></p>
                  <% if question.url.present? %>
                    <audio controls class="mt-2">
                      <source src="<%= question.url %>" type="audio/mpeg">
                      Your browser does not support the audio element.
                    </audio>
                  <% end %>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div> 